{
    "openapi": "3.0.0",
    "info": {
        "title": "Tao Among API",
        "description": "Tao Among API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/prefix/api/upload": {
            "post": {
                "tags": [
                    "Upload"
                ],
                "summary": "上傳魚類圖片",
                "operationId": "a4bcb2e378bd169697ceb21dae229c40",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "image"
                                ],
                                "properties": {
                                    "image": {
                                        "description": "要上傳的圖片",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "上傳成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "image uploaded successfully"
                                        },
                                        "data": {
                                            "type": "string",
                                            "example": "filename.jpg"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "驗證失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "驗證失敗"
                                        },
                                        "errors": {
                                            "properties": {
                                                "image": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "只能上傳單一圖片檔案。"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Upload",
            "description": "Upload"
        }
    ]
}